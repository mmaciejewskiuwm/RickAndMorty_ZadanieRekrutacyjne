{% extends 'base.html.twig' %}

{% block title %}Postacie z serialu "Rick and Morty"{% endblock %}

{% block body %}
    <style>
        body {
            background: #ececec;
        }

        .characters-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .characters-table th,
        .characters-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ccc;
        }

        .characters-table th {
            background: #ddd;
        }

        .characters-table img {
            width: 95px;
            height: 95px;
            border-radius: 50%;
            object-fit: cover;
            cursor: pointer;
        }

        .episode-label {
            text-align: center;
            font-weight: bold;
            padding-bottom: 8px;
        }

        .episodes-list {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
            padding: 0;
            margin: 0;
            justify-content: center;
        }

        .episodes-list li {
            list-style: none;
            background: #f9f9f9;
            padding: 4px 9px;
            border-radius: 4px;
            font-size: 13px;
        }

        .character-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            width: 100%;
            height: 100%;
            overflow: auto;
            background: rgba(0, 0, 0, 0.75);
            padding-top: 80px;
        }

        .modal-content {
            background: #fff;
            margin: auto;
            padding: 18px;
            border-radius: 8px;
            width: 290px;
            text-align: center;
        }

        .close-btn {
            color: #888;
            float: right;
            font-size: 22px;
            font-weight: bold;
            cursor: pointer;
        }

        .close-btn:hover {
            color: #222;
        }
    </style>

    <div class="example-wrapper">
        <h1>Bohaterowie z "Rick and Morty"</h1>

        <table class="characters-table">
            <tbody>
                {% for char in characters %}
                    <tr>
                        <td>{{ char.name }}</td>
                        <td>
                            <img 
                                src="{{ char.image }}" 
                                alt="Brak obrazka"
                                class="character-thumb"
                                data-name="{{ char.name }}"
                                data-status="{{ char.status }}"
                                data-species="{{ char.species }}"
                                data-gender="{{ char.gender }}"
                                data-location="{{ char.location.name }}"
                            >
                        </td>
                        <td>
                            <div class="episode-label">Wystepuje w odcinkach:</div>
                            <ul class="episodes-list">
                                {% for ep in char.episode_numbers %}
                                    <li>{{ ep }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- character detail modal -->
    <div id="characterModal" class="character-modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2 id="modal-name"></h2>
            <p><strong>Status:</strong> <span id="modal-status"></span></p>
            <p><strong>Species:</strong> <span id="modal-species"></span></p>
            <p><strong>Gender:</strong> <span id="modal-gender"></span></p>
            <p><strong>Location:</strong> <span id="modal-location"></span></p>
        </div>
    </div>

    <script> 
        document.querySelectorAll('.character-thumb').forEach(el => {
            el.addEventListener('click', function () {
                document.getElementById('modal-name').textContent = this.dataset.name;
                document.getElementById('modal-status').textContent = this.dataset.status;
                document.getElementById('modal-species').textContent = this.dataset.species;
                document.getElementById('modal-gender').textContent = this.dataset.gender;
                document.getElementById('modal-location').textContent = this.dataset.location;
                document.getElementById('characterModal').style.display = 'block';
            });
        });

        document.querySelector('.close-btn').addEventListener('click', () => {
            document.getElementById('characterModal').style.display = 'none';
        });

        window.addEventListener('click', (e) => {
            if (e.target === document.getElementById('characterModal')) {
                document.getElementById('characterModal').style.display = 'none';
            }
        });
    </script>
{% endblock %}
